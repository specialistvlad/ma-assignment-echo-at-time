{
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "airbnb-base", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "prettier/prettier": "error",
        "class-methods-use-this": "off",
        "no-underscore-dangle": "off"
    }
}
